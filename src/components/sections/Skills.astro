---
import Section from "../Section.astro";
import HTML from "@/icons/html.astro";
import CSS from "@/icons/css.astro";
import JavaScript from "@/icons/javascript.astro";
import TypeScript from "@/icons/type.astro";
import Node from "@/icons/node.astro";
import MySQL from "@/icons/sql.astro";
import Git from "@/icons/git.astro";
import GitHub from "@/icons/GitHub.astro";
import Tailwind from "@/icons/tailwind.astro";
import PostgreSQL from "@/icons/database.astro";
import MongoDB from "@/icons/mongo-db.astro";
import Angular from "@/icons/angular.astro";
import Vue from "@/icons/vue.astro";
import Nest from "@/icons/node.astro";
import PHP from "@/icons/php.astro";
import Laravel from "@/icons/laravel.astro";
import Docker from "@/icons/docker.astro";
import { skills } from "@cv";

const SKILLS_ICONS: Record<string, any> = {
  HTML,
  CSS,
  JavaScript,
  TypeScript,
  Node,
  MySQL,
  Git,
  GitHub,
  Tailwind,
  PostgreSQL,
  PHP,
  Laravel,
  Nest,
  Docker,
  Angular,
  Vue,
  MongoDB,
};
---

<Section title="Habilidades">
  <ul>
    {
      skills.map(({ name }) => {
        const iconName = name === "Nest.js" ? "Nest" : name;
        const Icon = SKILLS_ICONS[iconName];
        console.log(name);
        console.log(Icon);

        return (
          <li>
            {Icon && <Icon />} <span>{name}</span>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  li {
    align-items: center;
    background: #eee;
    border-radius: 6px;
    color: black;
    display: flex;
    font-size: 0.8rem;
    font-weight: 500;
    gap: 4px;
    padding: 0.2rem 0.6rem;
  }
</style>
